{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@bronifty/fs-utils/dist/types",
      "./node_modules/@types/node",
      "./node_modules/@types/aws-lambda"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

